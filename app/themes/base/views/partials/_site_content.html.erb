<%
  sidebar_left_content = get_content_for 'sidebar_left'
  sidebar_right_content = get_content_for 'sidebar_right'

  main_content_class = ' class="large-12 columns" '.html_safe
  sidebar_left_class = ' style="display: none;" '.html_safe
  sidebar_right_class = ' style="display: none;" '.html_safe

  if sidebar_left_content && sidebar_right_content
    main_content_class = ' class="medium-8 medium-push-4 large-6 large-push-3 columns" '.html_safe
    sidebar_left_class = ' class="medium-4 medium-pull-8 large-3 large-pull-6 columns" '.html_safe
    sidebar_right_class = ' class="large-3 columns" '.html_safe
  elsif sidebar_left_content
    main_content_class = ' class="medium-8 medium-push-4 columns" '.html_safe
    sidebar_left_class = ' class="medium-4 medium-pull-8 columns" '.html_safe
  elsif sidebar_right_content
    main_content_class = ' class="medium-8 columns" '.html_safe
    sidebar_right_class = ' class="medium-4 columns" '.html_safe
  end
%>

<div id="site_content">
  <div class="row">
    <div <%= main_content_class %>>
      <%= yield %>
    </div>
    <div <%= sidebar_left_class %>>
      <%= sidebar_left_content %>
    </div>
    <div <%= sidebar_right_class %>>
      <%= sidebar_right_content %>
    </div>
  </div>
</div>