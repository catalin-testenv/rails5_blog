<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <style><%= yield :css %></style>
    <script><%= yield :js %></script>
  </head>

  <body>
    <% if controller_name != 'sessions' %>
      <% unless user_signed_in? %>
      <% else %>
          <p><%= current_user.name %><%= image_tag current_user.image %></p>
          <%= link_to sign_out_message,  destroy_user_session_path, method: :delete %>
      <% end %>
    <% end %>
    <p id="notice"><%= notice %></p>
    <p id="alert"><%= alert %></p>
    <% pages_for_main_menu.each do |page| %>
      <%= link_to page[:title], page[:path] %>
    <% end %>
    <%= yield %>
  </body>

</html>
