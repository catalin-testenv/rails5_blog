
@import 'foundation-sites/util/util';
@import 'foundation-sites/foundation';

// ================= site vars
$transparent-black: rgba(0, 0, 0, 0.9);
$transparent-black-2: rgba(0, 0, 0, 0.95);

$site-main-navigation-shadow: 0px 1px 3px 0px rgba(0, 0, 0, .7);
// ================= /site vars


// ================= foundation vars overrides
$body-font-family:                                                "Roboto", "Helvetica Neue", Helvetica, Arial, sans-serif;

$menu-item-padding:                                               0.8rem 1.1rem;
$titlebar-background:                                             $transparent-black-2;

$dropdownmenu-background:                                         $transparent-black;
$dropdownmenu-border:                                             1px solid black;
$dropdownmenu-arrow-color:                                        white;

$accordionmenu-arrow-color:                                       white;
// ================= /foundation vars overrides



// ================ helpers
@for $i from 1 through 25 {
  .v-space-#{$i} { height: #{$i}px; }
}
// ================ /helpers



// ==================== main menu
[data-accordion-menu] {
  background-color: $transparent-black ;
}

.no-js .title-bar, .no-js [data-accordion-menu] , .no-js [data-dropdown-menu]  {
  display: none;
}

#large_site_main_navigation > .row > .columns {
  padding-left: 0px;
}

#large_site_main_navigation  {
  //border-top: 1px solid #c1c1c1;
  background-color: $transparent-black;
  //box-shadow: $site-main-navigation-shadow;
  z-index: 100;
}
.title-bar {
  //box-shadow: $site-main-navigation-shadow;
}

.title-bar a,
.menu li > a{
  color: white;
}

.menu li > a:hover{
  color: $primary-color;
}

.menu li.active > a{
  color: $primary-color;
  background-color: transparent;
}

.menu li > img {
  height: 40px;
  width: 40px;
  margin-top: 1px;
}

.title-bar img {
  height: 39px;
  width: 39px;
  margin-top: -10px;
  margin-bottom: -9px;
}
// ==================== /main menu



// =================== tags menu
.tags-menu-list {
  list-style: none;
}
.tags-menu-list li {
  display: inline-block;
  background: #eaeaea;
  padding: 0px 5px;
  margin: 0px 0px 5px 0px;
}
.tags-menu-list li a{
  color: black;
  &:hover {
    text-decoration: underline;
  }
}
.tags-menu-list li.active a{
  font-weight: bold;
}
// =================== /tags menu



// =================== callout
.callout h1, .callout h2, .callout h3, .callout h4, .callout h5, .callout h6 {
  margin-bottom: 0px;
}

.callout .close-button {
  font-size: 1em;
  top: -17px;
  right: -3px;
}
// =================== /callout



// ======================== header
#site_header {
  background-color: lightgray;
}
// ======================== /header



// ======================== footer
#site_footer {
  background-color: lightgray;
}
// ======================== /footer

@include foundation-everything;





