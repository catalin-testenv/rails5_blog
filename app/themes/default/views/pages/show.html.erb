<% content_for :title do %>
    <%= @resource.name.titleize %>
<% end %>

<% content_for :css do %>
    <%= @resource.page_content.meta_css.try(:html_safe) %>
<% end %>

<% content_for :js do %>
    <%= @resource.page_content.meta_js.try(:html_safe) %>
<% end %>

<h1><%= @resource.name %></h1>

<div>
  <%= @resource.page_content.content! %>
</div>

<% if @resource.comments.approved.any? %>
    <ul>
      <% @resource.comments.approved.each do |comment| %>
      <li>
        <p><%= comment.user.name %><%= image_tag comment.user.image!, size: '24x24' %></p>
        <div><%= comment.content! %></div>
      </li>
      <% end %>
    </ul>
<% end %>


