
<% title = resource_view_editing_message(resource_instance: @resource) %>

<% content_for :title do %>
    <%= title %>
<% end %>

<%= admin_body_title("#{icon_edit}&nbsp;&nbsp;#{title}") %>

<% page_edit_links = [
    {message: icon_list, path: admin_pages_path},
    {message: icon_preview, path: page_path(@resource),
     options: {target: '_blank'}},
    {message: icon_destroy, path: admin_page_path(@resource),
     options: {method: :delete, data: { confirm: are_you_sure_message }}}
] %>

<%= admin_body_top_links(page_edit_links) %>

<hr class="uk-grid-divider uk-margin-top-remove cancel-panel-box-horizontal-padding" />

<%= render 'form', resource: @resource %>

<hr class="uk-grid-divider cancel-panel-box-horizontal-padding" />

<%= admin_body_bottom_links(page_edit_links) %>

