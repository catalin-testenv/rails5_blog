<h1><%= resource_view_listing_message resource: Article, count: 2 %></h1>

<table>
  <thead>
    <tr>
      <th><%= Article.human_attribute_name(:title).humanize %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resource_list.each do |resource| %>
      <tr>
        <td><%= resource.title %></td>
        <td><%= link_to show_message, admin_article_path(resource) %></td>
        <td><%= link_to edit_message, edit_admin_article_path(resource) %></td>
        <td><%= link_to destroy_message, admin_article_path(resource), method: :delete, data: { confirm: are_you_sure_message } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to resource_view_new_message(resource: Article), new_admin_article_path %>
