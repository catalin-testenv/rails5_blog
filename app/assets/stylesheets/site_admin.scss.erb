@mixin hook-table-misc() {
  .uk-table thead {
    background-color: lighten($admin-body-uk-panel-background-color, 0.5%);
    border-bottom: 1px solid darken($table-active-background, 1%);
  }
  .uk-table tfoot {
    font-style: normal;
    vertical-align: top;
    background-color: lighten($admin-body-uk-panel-background-color, 0.5%);
    border-top: 1px solid darken($table-active-background, 1%);
  }

  .uk-table tfoot tr:last-child > th {
    // for dropdown button to not be clipped by the surrounding overflow-y hidden wrapper
    height: 85px !important;
  }
}

@mixin hook-form-misc(){

  .uk-form input[type=text],
  .uk-form  select {
    border-width: 0px 0px 1px 0px;
    padding-left: 0px;
    padding-right: 0px;
  }

  .code-editor-area {
    padding: $code-editor-area-padding !important;
    background-color: darken($admin-body-uk-panel-background-color, 3%);
    border: $tab-border-width solid $tab-active-border;
    &.uk-switcher {
      border-top: 0px solid $tab-active-border;
    }
    textarea {
      border-width: 0px;
      min-height: 200px;
      width: 100%; // helps with ie flicker bug
    }
  }
  .ace-chrome.ace_editor {
    overflow: visible;
  }
  .ace-chrome .ace_gutter {
    background-color: darken($admin-body-uk-panel-background-color, 3%) !important;
  }
  .ace-chrome .ace_gutter-active-line {
    background-color: darken($admin-body-uk-panel-background-color, 6%) !important;
  }
  .mce-tinymce.mce-container.mce-panel {
    border: none;
    margin: 0px 0px (-$code-editor-area-padding);
  }
  .wysiwyg-switcher .uk-subnav {
    margin-bottom: 7px;
  }
}

