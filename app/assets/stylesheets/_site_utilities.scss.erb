
// ============ form custom radio & checkbox

// http://codepen.io/ericrasch/pen/ElKBI?editors=1100

$ccr-base-background:      #fffaef !default;
$ccr-base-text:            #4f4351 !default;
$ccr-base-font-weight:     700     !default;

$ccr-color-subtitles:      #9a8864 !default;
$ccr-color-highlight:      #e9e59b !default;

$ccr-color-button:         #f2f2f0 !default;
$ccr-color-button-text:    darken($ccr-color-button, 50%) !default;
$ccr-color-button-border:  darken($ccr-color-button, 10%) !default;
$ccr-color-button-on:      indianred !default;
$ccr-color-button-text-on: #fff      !default;

$ccr-height:               30px      !default;

.ccr-custom-style {
  display: inline-block;
  clear: none;
  padding: 0.4em;

  height: $ccr-height;
  box-sizing: border-box;

  cursor: default;

  font-weight: $ccr-base-font-weight;
  text-align: center;

  -moz-user-select: none;
  -webkit-user-select: none;
  user-select: none;
}

.ccr-state-off {
  background: $ccr-color-button;
  color: $ccr-color-button-text;
}
.ccr-state-off:after {
  font-family: FontAwesome;
  content: "\00a0\00a0\00a0\f088";
}
.ccr-state-on {
  background: $ccr-color-button-on;
  color: $ccr-color-button-text-on;
}
.ccr-state-on:after {
  font-family: FontAwesome;
  content: "\00a0\00a0\00a0\f087";
}

.custom-cc:not(#foo) input[type='radio'],
.custom-cc:not(#foo) input[type='checkbox'] {
  opacity: 0;
  // filter: "alpha(opacity=0)";
  float: left;
  width: 0px;
  height: 0px;
}

.custom-cc:not(#foo) input[type='radio'] + label,
.custom-cc:not(#foo) input[type='checkbox'] + label {
  @extend .ccr-custom-style;
  @extend .ccr-state-off;
  cursor: pointer;
}

.custom-cc.custom-cc-fa:not(#foo) input[type='radio'] + label:after,
.custom-cc.custom-cc-fa:not(#foo) input[type='checkbox'] + label:after {
  @extend .ccr-state-off:after;
}

.custom-cc:not(#foo) input[type='radio']:checked + label,
.custom-cc:not(#foo) input[type='checkbox']:checked + label {
  @extend .ccr-state-on;
}

.custom-cc.custom-cc-fa:not(#foo) input[type='radio']:checked + label:after,
.custom-cc.custom-cc-fa:not(#foo) input[type='checkbox']:checked + label:after {
  @extend .ccr-state-on:after;
}

// ============ /form custom radio & checkbox

