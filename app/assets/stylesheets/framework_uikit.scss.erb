// -------- /define variables
$admin-body-uk-panel-background-color:           #f9f9f9;
$admin-main-navigation-uk-panel-background-color: #D7D6DB;
$link-font-size:                                 13px;
$link-letter-spacing:                            0.010em;
$link-font-weight:                               500;
$link-color-on-black-background:                 rgba(255,255,255,0.5);
$link-hover-color-on-black-background:           rgba(255,255,255,0.8);
