// -------- override uk hook-mixins
@mixin hook-panel-box() {

  #admin-toggle & {
    background-color: $base-body-background;
    a {
      color: $link-color-on-black-background;
      &:hover {
        color: $link-hover-color-on-black-background;
      }
    }
    .uk-subnav-line > :nth-child(n+2):before {
      border-width: 0px 1px 0px 0px;
      border-right: 1px solid darken($link-color-on-black-background, 30%);
      border-image: linear-gradient(to bottom,rgba(255,255,255,0) 0,rgba(255,255,255,.2) 50%,rgba(255,255,255,0) 100%);
      border-image-slice: 1;

      height: $subnav-line-border-height * 3;
      margin-top: -($subnav-line-border-height*1.5);
      margin-bottom: -($subnav-line-border-height*1.5);
    }
  }

  #admin-main-navigation & {
    background-color: $panel-title-background-color_;
    box-shadow: $box-shadow-bottom-inset;
    @media (min-width: $breakpoint-medium) {
      box-shadow: $box-shadow-right-inset;
      border-top-left-radius: $utility-border-rounded;
      border-bottom-left-radius: $utility-border-rounded;
    }
    .uk-panel-title {
      text-transform: uppercase;
    }
    .uk-nav-side {
      margin-left: 0px;
      margin-right: 0px;
      @media (min-width: $breakpoint-medium) {
        margin-right: -$panel-box-padding;
      }
      li.uk-active > a {
        box-shadow:  $box-shadow-bottom;
        @media (min-width: $breakpoint-medium) {
          box-shadow:  $box-shadow-bottom-right;
          border-top-left-radius: $utility-border-rounded;
          border-bottom-left-radius: $utility-border-rounded;
        }
      }
    }
  }

  #admin-body > & {
    background-color: $admin-body-uk-panel-background-color;
    @media (min-width: $breakpoint-medium) {
      //border-top-right-radius: $utility-border-rounded; // doesn't look good with alert/notice stacked up
    }
  }

  &.panel-box-material {
    border-radius: $border-radius-small-all;
    box-shadow: $box-shadow-material;
    .uk-panel-title {
      background-color: $panel-title-background-color_;
      color: $panel-title-color;
      font-size: $panel-title-font-size + 4;
      margin-left: -$panel-box-padding;
      margin-top: -$panel-box-padding;
      margin-right: -$panel-box-padding;
      padding: $panel-box-padding;
    }
  }

}

@mixin hook-form() {

}

@mixin hook-form-misc(){

  .uk-form input[type=text],
  .uk-form  select {
    border-width: 0px 0px 1px 0px;
    padding-left: 0px;
    padding-right: 0px;
  }

  .code-editor-area.uk-switcher {
    padding: $code-editor-area-padding;
    background-color: darken($admin-body-uk-panel-background-color, 3%);
    border-left: $tab-border-width solid $tab-active-border;
    border-right: $tab-border-width solid $tab-active-border;
    border-bottom: $tab-border-width solid $tab-active-border;
    textarea {
      border-width: 0px;
      min-height: 200px;
      width: 100%; // helps with ie flicker bug
    }
  }
  .ace-chrome .ace_gutter {
    background-color: darken($admin-body-uk-panel-background-color, 3%) !important;
  }
  .ace-chrome .ace_gutter-active-line {
    background-color: darken($admin-body-uk-panel-background-color, 6%) !important;
  }
  .mce-tinymce.mce-container.mce-panel {
    border: none;
    margin: 0px 0px (-$code-editor-area-padding);
  }
  .wysiwyg-switcher .uk-subnav {
    margin-bottom: 7px;
  }
}

@mixin hook-form-stacked-label() {
  font-weight: normal;
}

@mixin hook-button() {
  color: $button-color !important;
  border: 1px solid $button-border_;
}
