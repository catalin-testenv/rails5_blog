@import 'bower-uikit/scss/uikit-variables';
@import 'bower-uikit/scss/uikit-mixins';

// -------- /define variables
$admin-body-uk-panel-background-color: #f9f9f9;
$admin-main-navigation-uk-panel-background-color: #D7D6DB;
$link-color-on-black-background: rgba(255, 255, 255, 0.7);
$link-hover-color-on-black-background: white;
// -------- /define variables

// -------- override uk variables
$icon-font-path: 'font-awesome/fonts';

$base-body-background: #2C2F3B;

$utility-border-rounded: 5px;

$utility-container-padding-horizontal: 0px;
$utility-container-large-padding-horizontal: 0px;

$nav-side-color: #666;
$nav-side-active-background: $admin-body-uk-panel-background-color;
$nav-side-active-color: #333;
$nav-side-hover-background: rgba(0,0,0,0.1);
$nav-side-hover-color: #333;

$tab-active-background: #a5904e;
$tab-hover-background: #b69f56;
$tab-active-border: #ddd;
$tab-border: #ddd;

$panel-box-background: #ffffff;

$form-background: #a5904e;
$form-color: #444;
$form-border: #6b5e34;

$form-focus-background: #bfa75a;
$form-focus-color: #444;
$form-focus-border: #6b5e34;

$button-background: #6b5e34;
$button-hover-background: #847440;
// -------- /override uk variables


// --------  define mixins

// -------- /define mixins


// -------- override uk hook-mixins
@mixin hook-nav-side-active(){
  box-shadow:  9px 9px 9px -9px rgba(0,0,0,.4);
  @media (min-width: $breakpoint-medium) {
    border-top-left-radius: $utility-border-rounded;
    border-bottom-left-radius: $utility-border-rounded;
  }
}
// -------- /override uk hook-mixins



// -------- helper classes
.uk-link-unmuted {
  a {
    color: $base-link-color;
    text-decoration: $base-link-text-decoration;
    &:hover {
      color: $base-link-hover-color;
      text-decoration: $base-link-hover-text-decoration;
    }
  }
}

.cancel-panel-box-horizontal-padding {
  margin-left: -$panel-box-padding;
  margin-right: -$panel-box-padding;
}

// for the sake of uk utils completeness
.uk-margin-left-remove { margin-left: 0 !important; }
.uk-margin-right-remove { margin-right: 0 !important; }
.uk-margin-vertical-remove { margin-top: 0 !important; margin-bottom: 0 !important; }
.uk-margin-horizontal-remove { margin-left: 0 !important; margin-right: 0 !important; }
.uk-padding-left-remove { padding-left: 0 !important; }
.uk-padding-right-remove { padding-right: 0 !important; }
.uk-padding-horizontal-remove {  padding-left: 0 !important;  padding-right: 0 !important;  }
// -------- /helper classes



// ============== layout area

#admin-toggle.uk-panel {
  background-color: $base-body-background;
  .uk-subnav-line > :nth-child(n+2):before {
    border-width: 0px 1px 0px 0px;
    border-right: 1px solid darken($link-color-on-black-background, 30%);
    border-image: linear-gradient(to bottom,rgba(255,255,255,0) 0,rgba(255,255,255,.2) 50%,rgba(255,255,255,0) 100%);
    border-image-slice: 1;

    height: $subnav-line-border-height * 3;
    margin-top: -($subnav-line-border-height*1.5);
    margin-bottom: -($subnav-line-border-height*1.5);
  }
  a {
    color: $link-color-on-black-background;
    &:hover {
      color: $link-hover-color-on-black-background;
    }
  }
}

#admin-main-navigation.uk-panel {
  background-color: $admin-main-navigation-uk-panel-background-color;
  box-shadow: inset 0 -9px 8px -11px rgba(0,0,0,.4);
  @media (min-width: $breakpoint-medium) {
    box-shadow: inset -9px 0 8px -11px rgba(0,0,0,.4);
    border-top-left-radius: $utility-border-rounded;
    border-bottom-left-radius: $utility-border-rounded;
  }
}
#admin-main-navigation .uk-panel-title {
  margin-bottom: 15px;
  font-size: 12px;
  line-height: 12px;
  weight: normal;
  color: $nav-side-color;
  text-transform: uppercase;
}
#admin-main-navigation .uk-nav-side {
  margin-left: 0px !important;
  margin-right: 0px !important;
  @media (min-width: $breakpoint-medium) {
    margin-right: -$panel-box-padding !important;
  }
}

#admin-body.uk-panel {
  background-color: $admin-body-uk-panel-background-color;
  @media (min-width: $breakpoint-medium) {
    border-top-right-radius: $utility-border-rounded;
  }
}

// ============== /layout area


// ============== form area
.field_with_errors label {
  color: $text-danger-color;
}

form.edit_page .uk-grid-margin {
  margin-top: $grid-gutter-vertical; // $grid-gutter-small-vertical
}

select {
  -webkit-appearance: none;
  -moz-appearance: none;
}
select::-ms-expand {
  display: none;
}
// ============== /form area





// ============== code editor
.uk-switcher.code-editor-area {
  padding: 10px 0px;
  background-color: $form-background;
  border-left: $tab-border-width solid $tab-active-border;
  border-right: $tab-border-width solid $tab-active-border;
  border-bottom: $tab-border-width solid $tab-active-border;
}
// ============== /code editor

